<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"

	android:orientation="vertical"
	android:background="?attr/fullscreenBackgroundColor"
	android:theme="@style/ThemeOverlay.YAMAHAOSC.FullscreenContainer"
	tools:context=".FullscreenActivity"
	android:id="@+id/fullscreen_frame"
	android:weightSum="10">

	<LinearLayout
		android:id="@+id/mixbutton_layout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintLeft_toRightOf="parent"
		android:orientation="horizontal"
		android:layout_weight="1"
		android:weightSum="6">

		<Button
			style="@style/Widget.Theme.YAMAHAOSC.MixButton"
			android:backgroundTint="@color/mix1"
			android:id="@+id/mix1_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="MIX 1"/>

		<Button
			style="@style/Widget.Theme.YAMAHAOSC.MixButton"
			android:backgroundTint="@color/mix2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="MIX 2"/>

		<Button
			style="@style/Widget.Theme.YAMAHAOSC.MixButton"
			android:backgroundTint="@color/mix3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="MIX 3"/>

		<Button
			style="@style/Widget.Theme.YAMAHAOSC.MixButton"
			android:backgroundTint="@color/mix4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="MIX 4"/>

		<Button
			style="@style/Widget.Theme.YAMAHAOSC.MixButton"
			android:backgroundTint="@color/mix5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="MIX 5"/>

		<Button
			style="@style/Widget.Theme.YAMAHAOSC.MixButton"
			android:backgroundTint="@color/mix6"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="MIX 6"/>

	</LinearLayout>

	<!-- The primary full-screen view. This can be replaced with whatever view
		 is needed to present your content, e.g. VideoView, SurfaceView,
		 TextureView, etc. -->
	<TextView
		android:id="@+id/fullscreen_content"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0"
		android:gravity="center"
		android:keepScreenOn="true"
		android:text="@string/dummy_content"
		android:textColor="?attr/fullscreenTextColor"
		android:textSize="50sp"
		android:textStyle="bold" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="9"
		android:orientation="horizontal">

		<com.lukelorusso.verticalseekbar.VerticalSeekBar
			android:id="@+id/fader1"
			android:layout_width="60dp"
			android:layout_height="match_parent"
			app:vsb_max_value="1023"
			app:vsb_progress="823"
			app:layout_constraintLeft_toLeftOf="parent"
			app:vsb_bar_background="#eeeeee"
			app:vsb_bar_corner_radius="5dp"
			app:vsb_bar_progress_gradient_end="@color/light_blue_600"
			app:vsb_bar_progress_gradient_start="@color/teal_200"
			app:vsb_bar_width="40dp"
			app:vsb_click_to_set_progress="false"
			app:vsb_max_placeholder_position="inside"
			app:vsb_min_placeholder_position="inside"
			app:vsb_show_thumb="true"
			app:vsb_thumb_container_corner_radius="5dp"
			app:vsb_use_thumb_to_set_progress="true" />

	</LinearLayout>


	<!-- This FrameLayout insets its children based on system windows using
		 android:fitsSystemWindows. -->
	<FrameLayout
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"
		android:fitsSystemWindows="true">

		<LinearLayout
			android:id="@+id/fullscreen_content_controls"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|center_horizontal"
			android:orientation="horizontal"
			android:weightSum="6"
			tools:ignore="UselessParent">

			<Button
				android:id="@+id/dummy_button"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/dummy_button"
				android:visibility="gone" />

		</LinearLayout>
	</FrameLayout>

</LinearLayout>