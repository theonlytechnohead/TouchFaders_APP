<resources>
	<!-- Base application theme. -->
	<style name="Theme.TouchFaders" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/light_blue_900</item>
		<item name="colorPrimaryVariant">@color/light_blue_600</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorAccent</item>
		<!-- Customize your theme here. -->

		<item name="alertDialogTheme">@style/Theme.TouchFaders.Dialog</item>
	</style>

	<style name="Theme.TouchFaders.Dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
		<item name="android:background">@color/black</item>
	</style>

	<style name="ThemeOverlay.TouchFaders.FullscreenContainer" parent="">
		<item name="fullscreenBackgroundColor">@color/black</item>
		<item name="fullscreenTextColor">@color/light_blue_A200</item>
	</style>
</resources>