<resources>

	<style name="Widget.Theme.TouchFaders.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
		<item name="android:background">@color/black_overlay</item>
	</style>

	<style name="Widget.Theme.TouchFaders.MixButton" parent="">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">25sp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:insetTop">0dp</item>
	</style>

	<style name="Widget.Theme.TouchFaders.Fader" parent="">
		<item name="vsb_max_value">1023</item>
		<item name="vsb_bar_corner_radius">5dp</item>
		<item name="vsb_thumb_container_corner_radius">5dp</item>
		<item name="vsb_click_to_set_progress">true
		</item> <!-- This one is debatable, doesn't work well with the HorizontalScrollView, revise later? -->
		<!-- also HorizontalScrollView makes app freeze when adjusting faders too much because idk redraw something -->
		<item name="vsb_use_thumb_to_set_progress">true</item>
		<item name="vsb_show_thumb">true</item>
		<item name="vsb_min_placeholder_position">inside</item>
		<item name="vsb_max_placeholder_position">inside</item>
		<item name="vsb_bar_width">35dp</item>
		<item name="vsb_bar_progress_gradient_start">@color/light_blue_600</item>
		<item name="vsb_bar_progress_gradient_end">@color/teal_200</item>
	</style>
</resources>