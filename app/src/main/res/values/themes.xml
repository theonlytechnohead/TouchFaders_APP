<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.TouchFaders" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/light_blue_900</item>
		<item name="colorPrimaryVariant">@color/light_blue_600</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.TouchFaders.Fullscreen" parent="Theme.TouchFaders">
		<item name="android:actionBarStyle">@style/Widget.Theme.TouchFaders.ActionBar.Fullscreen
		</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<style name="ThemeOverlay.TouchFaders.FullscreenContainer" parent="">
		<item name="fullscreenBackgroundColor">@color/background</item>
		<item name="fullscreenTextColor">@color/light_blue_A200</item>
	</style>
</resources>